function imagemn,imagem1, = bitdrop(imagem)
%BITDROPSHIFT - PRODUZ A IMAGEM COLORIDA APENAS COM OS 2 BITS MAIS
%SIGNIFICATIVOS DE CADA PlANO DE COR;


imagemn = zeros(size(imagem));
imagem1 = bitshift(imagem(:,:,1), -6);
imagem1 = uint8(bitshift(imagem1,6));
imagem2 = bitshift(imagem(:,:,2), -6);
imagem2 = uint8(bitshift(imagem2,6));
imagem3 = bitshift(imagem(:,:,3), -6);
imagem3 = uint8(bitshift(imagem3,6));

imagemn(:,:,1) = imagem1;
imagemn(:,:,2) = imagem2;
imagemn(:,:,3) = imagem3;